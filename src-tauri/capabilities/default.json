{
  "identifier": "default",
  "description": "Default capabilities for DeskNote",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPLOCALDATA/**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPLOCALDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPLOCALDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" }
      ]
    },
    "sql:default",
    "store:default",
    "window-state:default"
  ]
}
