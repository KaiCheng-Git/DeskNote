{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeskNote",
  "version": "0.1.0",
  "identifier": "com.desknote.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../.svelte-kit/output/client"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DeskNote",
        "width": 320,
        "height": 520,
        "minWidth": 280,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "visible": true,
        "center": false,
        "x": 20,
        "y": 60
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
